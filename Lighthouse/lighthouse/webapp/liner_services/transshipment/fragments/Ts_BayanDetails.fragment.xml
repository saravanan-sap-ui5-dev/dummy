<core:FragmentDefinition xmlns:uxap="sap.uxap"
    xmlns:table="sap.ui.table"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:vm="sap.ui.comp.variants"
    xmlns:smartMultiInput="sap.ui.comp.smartmultiinput" height="100%">

    <Panel backgroundDesign="Transparent" class="sapUiNoContentPadding">
        <VBox class="sapUiSmallMargin" backgroundDesign="Transparent">
            <form:SimpleForm class="formPadding" editable="true" layout="ColumnLayout" columnsXL="2" columnsL="2" columnsM="2" singleContainerFullSize="false">
                <form:content>
                    <Label text="{i18n>tsMasterName}" />
                    <Input />
                    <Label text="{i18n>tsNationality}" />
                    <ComboBox selectedKey="">
                        <core:Item key="1" text="IND" />
                        <core:Item key="2" text="UAE" />
                        <core:Item key="3" text="US" />
                        <core:Item key="4" text="UK" />
                    </ComboBox>
                </form:content>
            </form:SimpleForm>
            <form:SimpleForm class="formPadding" editable="true" layout="ColumnLayout" columnsXL="2" columnsL="2" columnsM="2" singleContainerFullSize="false">
                <form:content>
                    <Label text="{i18n>tsCARNo}" />
                    <Input />
                    <Label text="{i18n>tsManifestNo}" />
                    <Input />
                </form:content>
            </form:SimpleForm>
        </VBox>
    </Panel>
</core:FragmentDefinition>