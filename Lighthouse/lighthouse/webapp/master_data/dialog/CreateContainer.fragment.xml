<core:FragmentDefinition xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core">
    <Dialog title="New Container" contentWidth="70%" contentHeight="40%" verticalScrolling="false">
        <core:Fragment fragmentName="com.lighthouse.master_data.container.fragments.Co_General" binding="{/MasterScreenGeneral}" type="XML"/>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button type="Emphasized" text="Save" press="onSaveContainerDetail"/>
                <Button type="Ghost" text="Cancel" press="onCloseContainerDetail"/>
            </OverflowToolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>
