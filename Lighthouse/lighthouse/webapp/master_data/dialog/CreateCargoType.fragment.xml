<core:FragmentDefinition xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core">
    <Dialog title="New Cargo Type" contentWidth="50%" contentHeight="25%" verticalScrolling="false">
        <core:Fragment fragmentName="com.lighthouse.master_data.cargo_type.Ca_Form" binding="{/MasterScreenGeneral}" type="XML"/>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button type="Emphasized" text="Save" press="onSaveCargoTypeDetail"/>
                <Button type="Ghost" text="Cancel" press="onCloseCargoTypeDetail"/>
            </OverflowToolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>
