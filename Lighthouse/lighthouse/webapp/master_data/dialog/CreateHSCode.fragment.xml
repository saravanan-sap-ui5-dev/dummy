<core:FragmentDefinition xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core">
    <Dialog title="New HS Code" contentWidth="70%" contentHeight="40%" verticalScrolling="false">
        <core:Fragment fragmentName="com.lighthouse.master_data.hs_code.HS_Form" binding="{/MasterScreenGeneral}" type="XML"/>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button type="Emphasized" text="Save" press="onSaveHsCodeDetail"/>
                <Button type="Ghost" text="Cancel" press="onCloseHsCodeDetail"/>
            </OverflowToolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>
