<mvc:View controllerName="com.lighthouse.master_data.container_type.ContainerType"
    xmlns:uxap="sap.uxap"
    xmlns:table="sap.ui.table"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:vm="sap.ui.comp.variants"
    xmlns:smartMultiInput="sap.ui.comp.smartmultiinput" height="100%"
    xmlns:field="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    <f:DynamicPage id="page_ContainerType" headerExpanded="true" preserveHeaderStateOnScroll="true" showFooter="{= (!${visible>/view} || ${errors>/}.length!== 0)}">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{i18n>ctPageTitle}" />
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="false">
                <f:content>
                    <core:Fragment fragmentName="com.lighthouse.master_data.container_type.Cntr_FilterBar" type="XML" binding="{/advancedFilter}"/>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>

        <!-- DynamicPage Content -->
        <f:content>
            <core:Fragment fragmentName="com.lighthouse.master_data.container_type.Cntr_Table" type="XML" binding="{/table}"/>
        </f:content>
        <f:footer>
            <OverflowToolbar>
                <Button id="btnManageContainerTypeErr" visible="{=!!${errors>/}.length}" icon="sap-icon://error" type="Negative" text="{i18n>cnBtnError}" press=".handleMessagePopoverPress" ariaHasPopup="Dialog" />
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>