            </fb:FilterItem>
            <fb:FilterItem name="B" label="Role Name">
                <fb:control>
                    <Input />
                </fb:control>
            </fb:FilterItem>
            <fb:FilterItem name="C" label="Status">
                <fb:control>
                    <MultiComboBox>
                        <core:Item key="1" text="Draft" />
                        <core:Item key="2" text="Active" />
                        <core:Item key="3" text="Inactive" />
                    </MultiComboBox>
                </fb:control>
            </fb:FilterItem>
        </fb:filterItems>
