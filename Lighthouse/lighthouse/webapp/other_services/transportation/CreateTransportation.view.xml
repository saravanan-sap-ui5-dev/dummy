<mvc:View controllerName="com.lighthouse.other_services.transportation.CreateTransportation"
    xmlns:uxap="sap.uxap"
    xmlns:table="sap.ui.table"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:vm="sap.ui.comp.variants"
    xmlns:upload="sap.m.upload"
    xmlns:smartMultiInput="sap.ui.comp.smartmultiinput" height="100%">
    <uxap:ObjectPageLayout id="page_CreateTransport" showFooter="true" useIconTabBar="false" showTitleInHeaderContent="true" showHeaderContent="false" alwaysShowContentHeader="false" preserveHeaderStateOnScroll="false" headerContentPinnable="true" isChildPage="true" upperCaseAnchorBar="false">
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle>
                <uxap:expandedHeading>
                    <Title text="New Transport" wrapping="true" class="sapUiSmallMarginEnd" />
                </uxap:expandedHeading>
                <uxap:snappedHeading>
                    <Title text="New Transport" wrapping="true" class="sapUiSmallMarginEnd" />
                </uxap:snappedHeading>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>

        <uxap:sections>
            <uxap:ObjectPageSection titleUppercase="false" title="General">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="General">
                        <core:Fragment fragmentName="com.lighthouse.other_services.transportation.fragments.Tp_General" type="XML" binding="{/}"/>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection titleUppercase="false" title="Trip">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="Trip">
                        <core:Fragment fragmentName="com.lighthouse.other_services.transportation.fragments.Tp_Trips" type="XML" binding="{/chargesDetails}"/>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection titleUppercase="false" title="Charges &amp; Payments">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection>
                        <core:Fragment fragmentName="com.lighthouse.other_services.transportation.fragments.Tp_ChargesAndPayments" type="XML" binding="{/communicationDetails}"/>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection titleUppercase="false" title="{i18n>cnAttachmentsSection}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection>
                        <core:Fragment fragmentName="com.lighthouse.other_services.transportation.fragments.Tp_UploadSet" type="XML" />
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection title="{i18n>cnChangeLogSection}" titleUppercase="false">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection mode="Expanded">
                        <Table inset="false" items="{/changeLog}" mode="None">
                            <columns>
                                <Column width="10em">
                                    <Text text="{i18n>cnclSlNo}" />
                                </Column>
                                <Column>
                                    <Text text="{i18n>cnclSectionName}" />
                                </Column>
                                <Column width="15em" minScreenWidth="Tablet" demandPopin="true">
                                    <Text text="{i18n>cnclModifiedBy}" />
                                </Column>
                                <Column width="15em" minScreenWidth="Tablet" demandPopin="true">
                                    <Text text="{i18n>cnclModifiedOn}" />
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem>
                                    <cells>
                                        <ObjectIdentifier title="{slNo}" />
                                        <Text text="{sectionName}" />
                                        <Text text="{modifiedOn}" />
                                        <Text text="{modifiedBy}" />
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
        <uxap:footer>
            <OverflowToolbar>
                <Button id="btnTransportCreateError" visible="{=!!${errors>/}.length}" icon="sap-icon://error" type="Negative" text="{i18n>cnBtnError}" press=".handleMessagePopoverPress" ariaHasPopup="Dialog" />
                <ToolbarSpacer />
                <Button type="Emphasized" text="{i18n>cnBtnSave}" />
                <Button type="Transparent" text="{i18n>cnBtnCancel}" press="onPressCancel" />
            </OverflowToolbar>
        </uxap:footer>
    </uxap:ObjectPageLayout>
</mvc:View>